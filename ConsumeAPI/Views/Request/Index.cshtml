@model IEnumerable<ConsumeAPI.Models.RequestViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.req_start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.req_end)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.req_permission)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.req_status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.car_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.customer_id)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.req_start)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.req_end)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.req_permission)
        </td>
        <td>
            @{ 
                if(item.req_status == 0)
                {
                    Write("Pending");
                }else if(item.req_status == 1)
                {
                    Write("Accepted");
                }
                else
                {
                    Write("Request");
                }
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.car_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.customer_id)
        </td>
        <td>
            @Html.ActionLink("Accept", "Accept", new { id = item.Id }) |
            @Html.ActionLink("Reject", "Reject", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
